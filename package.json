{
    "name": "polypost",
    "displayName": "PolyPost",
    "version": "1.3.0",
    "description": "AI-powered social media content creation with polishing, translation, and variant management",
    "type": "module",
    "scripts": {
        "dev": "npm run dev:chrome",
        "dev:chrome": "POLYPOST_BROWSER=chrome vite",
        "dev:firefox": "POLYPOST_BROWSER=firefox vite",
        "dev:safari": "POLYPOST_BROWSER=safari vite",
        "build": "npm run build:chrome",
        "build:ext": "tsc && vite build",
        "build:chrome": "POLYPOST_BROWSER=chrome npm run build:ext",
        "build:firefox": "POLYPOST_BROWSER=firefox npm run build:ext",
        "build:safari": "POLYPOST_BROWSER=safari npm run build:ext",
        "preview": "npm run preview:chrome",
        "preview:chrome": "POLYPOST_BROWSER=chrome vite preview",
        "preview:firefox": "POLYPOST_BROWSER=firefox vite preview",
        "preview:safari": "POLYPOST_BROWSER=safari vite preview",
        "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "prepare": "husky install"
    },
    "dependencies": {
        "lucide-react": "^0.330.0",
        "openai": "^4.28.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.22.0",
        "zustand": "^4.5.0"
    },
    "devDependencies": {
        "@crxjs/vite-plugin": "^2.0.0-beta.23",
        "@types/chrome": "^0.0.260",
        "@types/react": "^18.2.55",
        "@types/react-dom": "^18.2.19",
        "@typescript-eslint/eslint-plugin": "^8.54.0",
        "@typescript-eslint/parser": "^8.54.0",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.17",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "globals": "^17.3.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "postcss": "^8.4.35",
        "prettier": "^3.8.1",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.3.3",
        "vite": "^5.1.0"
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,css,html}": [
            "prettier --write"
        ]
    }
}
